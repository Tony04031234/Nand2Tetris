// projects/09/segment/Segment.jack

/**
 * Implements a graphic segment to be used as parts of the snake and as
 * delishuz snacks. 
 */
class Segment {

    // Location on the screen
    field int x, y;

    field bool m_isHead;
    field bool m_isTail;

    field int m_nextMove;

    // The size of the segment
    field int size;

    /** Constructs a new segment with a given location and size. */
    constructor Segment new(int Ax, int Ay, int Asize, bool isHead, bool isTail, int nextMove) {
        let x = Ax;
        let y = Ay;
        let size = Asize;
        let m_isHead = isHead;
        let m_isTail = isTail;
        let m_nextMove = nextMove;
        return this;
    }

    /** Deallocates the object's memory. */
    method void dispose() {
        do Memory.deAlloc(this);
        return;
    }

    method int getX() {
        return x;
    }

    method int getY() {
        return y;
    }

    method int getNextMove () {
        return m_nextMove;
    }

    method void setNextMove(int nextMove) {
        let m_nextMove = nextMove;
        if (m_nextMove = 100) {
            let m_nextMove = 0;
        }
        return;
    }

    /** Draws the segment on the screen. */
    method void draw() {
        do Screen.setColor(true);
        do Screen.drawRectangle(x, y, x + size, y + size);
        return;
    }

    /** Erases the segment from the screen. */
    method void erase() {
        do Screen.setColor(false);
        do Screen.drawRectangle(x, y, x + size, y + size);
        return;
    }

    /** Increments the size by 2 pixels. */
    method void incSize() {
        if (((y + size) < 254) & ((x + size) < 510)) {
            do erase();
            let size = size + 2;
            do draw();
        }
        return;
    }

    /** Decrements the size by 2 pixels. */
    method void decSize() {
        if (size > 2) {
            do erase();
            let size = size - 2;
            do draw();
        }
        return;
	}

    method void moveUp() {
        if (y > 1) {
            let y = y - 5;
        } else {
            let y = 250;
        }
        if (m_isHead) {
            do Screen.setColor(true);
            do Screen.drawRectangle(x, y, x + size, y + 5);
        } 
        if (m_isTail) {
            do Screen.setColor(false);
            do Screen.drawRectangle(x, y, x + size, y + 5);
        }
        return;
    }

    method void moveDown() {
        if (y < 250) {
            let y = y + 5;
        } else {
            let y = 0;
        }
        if (m_isHead) {
            do Screen.setColor(true);
            do Screen.drawRectangle(x, (y + size) - 5, x + size, y + size);
        } 
        if (m_isTail) {
            do Screen.setColor(false);
            do Screen.drawRectangle(x, (y + size) - 5, x + size, y + size);
        }
        return;
    }

    method void moveLeft() {
        if (x > 1) {
            let x = x - 5;
        } else {
            let x = 506;
        }
        if (m_isHead) {
            do Screen.setColor(true);
            do Screen.drawRectangle(x, y, x + 5, y + size);
        } 
        if (m_isTail) {
            do Screen.setColor(false);
            do Screen.drawRectangle(x, y, x + 5, y + size);
        }
        return;
    }

    method void moveRight() {
        if ((x + size) < 506) {
            let x = x + 5;
        } else {
            let x = 0;
        }
        if (m_isHead) {
            do Screen.setColor(true);
            do Screen.drawRectangle((x + size) - 5, y, x + size, y + 5);
        } 
        if (m_isTail) {
            do Screen.setColor(false);
            do Screen.drawRectangle((x + size) - 5, y, x + size, y + 5);
        }
        return;
    }
}
